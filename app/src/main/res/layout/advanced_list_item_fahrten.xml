<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_fa_id"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:text="ID:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rev_id"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Reservierungs_ID:"
        app:layout_constraintStart_toEndOf="@+id/tv_fa_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fz_id"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Fahrzeug_ID:"
        app:layout_constraintStart_toEndOf="@+id/tv_rev_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pu_id"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:text="Public_ID:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_fz_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fahrt_start"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:text="Start:"
        app:layout_constraintStart_toEndOf="@+id/tv_fahrt_strecke"
        app:layout_constraintTop_toBottomOf="@+id/tv_rev_id" />

    <TextView
        android:id="@+id/tv_fahrt_ziel"
        android:layout_width="151dp"
        android:layout_height="60dp"
        android:text="Ziel:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_fahrt_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_pu_id" />

    <TextView
        android:id="@+id/tv_fahrt_strecke"
        android:layout_width="108dp"
        android:layout_height="60dp"
        android:text="Strecke:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fa_id" />
</androidx.constraintlayout.widget.ConstraintLayout>
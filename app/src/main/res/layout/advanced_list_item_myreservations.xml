<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_list_ziel"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_list_start"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_myRId"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_entfernung"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_list_ziel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_fahrzeug"
        android:layout_width="60dp"
        android:layout_height="21dp"
        android:layout_marginStart="23dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_list_entfernung"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_start"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_list_myRId"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>